@model IEnumerable<GoodForMooTurf.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<table id="dtOrders" class="cell-border compact stripe">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaptureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VAT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrandTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalVAT)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-success"><i class="far fa-plus-square"></i>Create</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaptureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VAT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrandTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalVAT)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.Reference" class="btn btn-primary"><i></i>Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Reference" class="btn btn-danger" onclick="return confirm('Are you sure to delete this record?')"><i></i>Delete</a>
                <a asp-controller="OrderItem" asp-action="Index" asp-route-id="@item.Reference" class="btn btn-info">Order Items</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" />
<script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>

<script>
    $.noConflict(); 
    jQuery( document ).ready(function( $ ) {
        $('#dtOrders').DataTable();
    });
</script>